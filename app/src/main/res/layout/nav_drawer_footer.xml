<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="12dp"
    tools:ignore="MissingPrefix"

    >

    <include layout="@layout/item_divider"/>

    <Button
        android:id="@+id/nav_drawer_footer_settings_button"
        fontPath="fonts/HelveticaNeue-Light.otf"
        android:background="@null"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:padding="6dp"
        android:text="@string/nav_drawer_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_primary"/>

    <Button
        android:id="@+id/nav_drawer_footer_about_button"
        fontPath="fonts/HelveticaNeue-Light.otf"
        android:background="@null"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:padding="6dp"
        android:text="@string/nav_drawer_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_primary"
        android:clickable="true"
        />

    <Button
        android:id="@+id/nav_drawer_footer_feedback_button"
        fontPath="fonts/HelveticaNeue-Light.otf"
        android:background="@null"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:padding="6dp"
        android:text="@string/nav_drawer_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_primary"/>

</LinearLayout>
