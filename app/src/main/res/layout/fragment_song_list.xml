<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:tag="All Songs Fragment"
             tools:context="com.freneticlabs.cleff.fragments.SongsFragment">

    <ListView
        android:id="@+id/recycler_view_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/song_list_selected_item"
        android:divider="@color/divider"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dip"
        />

    <include layout="@layout/floating_player_actions" />


</FrameLayout>
